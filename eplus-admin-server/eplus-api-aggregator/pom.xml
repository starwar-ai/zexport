            <artifactId>eplus-module-dms-api</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- ========== 业务模块 API - 办公与协作 ========== -->
        <dependency>
            <groupId>cn.iocoder.boot</groupId>
