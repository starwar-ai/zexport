            <groupId>cn.iocoder.boot</groupId>
            <artifactId>eplus-module-sms-api</artifactId>
            <version>${revision}</version>
        </dependency>
        <dependency>
            <groupId>cn.iocoder.boot</groupId>
            <artifactId>eplus-module-crm-api</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- ========== 业务模块 API - 财务管理 ========== -->
        <dependency>
            <groupId>cn.iocoder.boot</groupId>
            <artifactId>eplus-module-fms-api</artifactId>
            <version>${revision}</version>
        </dependency>

        <!-- ========== 业务模块 API - 质量与文档 ========== -->
