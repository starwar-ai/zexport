{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "调试前端 (Chrome - localhost)",
      "url": "http://localhost:${input:port}",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/src/*"
      },
      "preLaunchTask": "npm: dev"
    }
  ],
  "inputs": [
    {
      "id": "port",
      "type": "promptString",
      "description": "请输入开发服务器端口号",
      "default": "80"
    }
  ]
}
